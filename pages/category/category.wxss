
.active{
    background-color: #FFF;
    color: red;
}


/* 顶部搜索框 */
.top_input{
    border-top: 1rpx solid rgb(248, 248, 248);
    border-bottom: 1rpx solid rgb(248, 248, 248);
    width: 100%;
    position: fixed;
    top: 0;
    background-color: #FFF;
}
.top_input input{
    width: 700rpx;
    height: 60rpx;
    border-radius: 50rpx;
    background-color: rgb(248, 248, 248);
    margin: 20rpx 0;
    text-align: center;
    font-size: 14px;
    margin-left: 25rpx;
}

/* 底部内容区 */

.container{
    display: flex;
    justify-content: space-between;
    margin-top: 120rpx;
}
.container .Left-nav{
    width: 22%;
    display: flex;
    flex-direction: column;
    background-color: rgb(248, 248, 248);
    box-sizing: border-box;
}
.container .Left-nav .left-nav-item{
    box-sizing: border-box;
    width: 100%;
    height: 100rpx;
    font-size: 12px;
    padding: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.container .right-container{
    width: 78%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    margin-left: 14rpx;
}
.container .right-container .top_img{
    width: 100%;
    height: 210rpx;
}
.right-container-title{
    font-size: 14px;
    font-weight: bold;
    margin: 20rpx 0;
}
.right-container .Recommend{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.right-container .Recommend .Recommend-item{
    width: 49.333%;
    display: flex;
    justify-content: space-around;
    box-sizing: border-box;
    padding: 10rpx;
    margin-bottom: 10rpx;
    background-color: rgb(248, 248, 248);
    padding: 20rpx 0;
}
.right-container .Recommend .Recommend-item .Recommend-item-text{
    display: flex;
    flex-direction: column;
}
.right-container .Recommend .Recommend-item .Recommend-item-text .Recommend-item-text-up{
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 5rpx;
    margin-top: 10rpx;
}
.right-container .Recommend .Recommend-item .Recommend-item-text .Recommend-item-text-down{
    font-size: 12px;
    color: red;
}
.right-container .Recommend .Recommend-item image{
    width: 90rpx;
    height: 90rpx;
}